{
  "name": "jupyter-chatbot",
  "publisher": "ethanloi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/LoiLoi-10/jupyter-chatbot.git"
  },
  "displayName": "Jupyter Notebook Chatbot",
  "description": "AI-powered assistant for Jupyter Notebooks with multi-LLM support",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.101.0",
    "vscode-notebook-renderer": "^1.0.0"
  },
  "categories": [
    "Machine Learning",
    "AI"
  ],
  "extensionDependencies": [
    "ms-toolsai.jupyter"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Jupyter Chatbot",
      "properties": {
        "jupyter-chatbot.llmProvider": {
          "type": "string",
          "default": "ollama",
          "enum": ["ollama", "university-server"],
          "description": "Select LLM provider"
        },
        "jupyter-chatbot.universityApiUrl": {
          "type": "string",
          "default": "http://chat.ese.ic.ac.uk:8080",
          "description": "University LLM API endpoint"
        },
        "jupyter-chatbot.model": {
          "type": "string",
          "default": "llama3",
          "description": "Model to use for the LLM"
        }
      }
    },
    "commands": [
      {
        "command": "jupyter-chatbot.testModel",
        "title": "Test LLM Connection",
        "category": "Jupyter Chatbot"
      },
      {
        "command": "jupyter-chatbot.refreshContext",
        "title": "Refresh Notebook Context",
        "category": "Jupyter Chatbot"
      },
      {
        "command": "jupyter-chatbot.clearHistory",
        "title": "Clear Chat History",
        "category": "Jupyter Chatbot"
      },
      {
        "command": "jupyter-chatbot.setUniversityApiKey",
        "title": "Set University API Key",
        "category": "Jupyter Chatbot"
      },
      {
        "command": "jupyter-chatbot.setUniversityApiUrl",
        "title": "Set University API URL",
        "category": "Jupyter Chatbot"
      },
      {
        "command": "jupyter-chatbot.refreshModels",
        "title": "Refresh Available Models",
        "category": "Jupyter Chatbot"
      },
      {
        "command": "jupyter-chatbot.listModels",
        "title": "List Available Models",
        "category": "Jupyter Chatbot"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "jupyter-chatbot.refreshContext",
          "when": "notebookEditorFocused"
        },
        {
          "command": "jupyter-chatbot.clearHistory",
          "when": "view == jupyter-chatbot-view"
        },
        {
          "command": "jupyter-chatbot.setUniversityApiKey",
          "when": "view == jupyter-chatbot-view"
        },
        {
          "command": "jupyter-chatbot.setUniversityApiUrl",
          "when": "view == jupyter-chatbot-view"
        },
        {
          "command": "jupyter-chatbot.refreshModels",
          "when": "view == jupyter-chatbot-view"
        }
      ],
      "view/title": [
        {
          "command": "jupyter-chatbot.clearHistory",
          "when": "view == jupyter-chatbot-view",
          "group": "navigation"
        },
        {
          "command": "jupyter-chatbot.setUniversityApiKey",
          "when": "view == jupyter-chatbot-view",
          "group": "navigation"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "jupyter-chatbot",
          "title": "Jupyter Chatbot",
          "icon": "icons/jupyter-chatbot-icon.png"
        }
      ]
    },
    "views": {
      "jupyter-chatbot": [
        {
          "icon": "icons/jupyter-chatbot-icon.png",
          "id": "jupyter-chatbot-view",
          "name": "Chat",
          "type": "webview",
          "contextualTitle": "Jupyter Chatbot"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "jupyter-chatbot-view",
        "contents": "Welcome to Jupyter Chatbot!\n[Test Connection](command:jupyter-chatbot.testModel)\n[Refresh Models](command:jupyter-chatbot.refreshModels)\n[Refresh Context](command:jupyter-chatbot.refreshContext)\n[Clear History](command:jupyter-chatbot.clearHistory)\n[Set API Key](command:jupyter-chatbot.setUniversityApiKey)\n[Set API URL](command:jupyter-chatbot.setUniversityApiUrl)"
      }
    ],
    "iconThemes": [
      {
        "id": "jupyter-chatbot-icons",
        "label": "Jupyter Chatbot Icons",
        "path": "./icons.json"
      }
    ],
    "notebookProvider": [
      {
        "viewType": "jupyter-notebook",
        "displayName": "Jupyter Notebook",
        "selector": [
          {
            "filenamePattern": "*.ipynb"
          }
        ]
      }
    ]
  },
  "activationEvents": [
    "onNotebookEditor:jupyter-notebook"
  ],
  "scripts": {
    "vscode:prepublish": "npm run build",
    "compile": "webpack",
    "watch": "webpack --watch",
    "build": "webpack --mode production --devtool hidden-source-map",
    "package": "npm run build && vsce package --out dist/",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run build && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.4",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.101.0",
    "@types/vscode-notebook-renderer": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^2.15.0",
    "babel-loader": "^10.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^9.25.1",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "axios": "^1.10.0"
  }
}