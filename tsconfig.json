{
  "compilerOptions": {
    "module": "commonjs",  
    "target": "ES2020",    
    "lib": ["ES2020"],
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",      
    "strict": true,
    "esModuleInterop": true,  
    "skipLibCheck": true,     
    "resolveJsonModule": true,
    "moduleResolution": "node",
    
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true
  },
  "include": ["src/**/*.ts"] 
}